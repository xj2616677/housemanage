                <RelativeLayout
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/lin_commit_problem"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/text_commit_problem"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:textSize="20sp"
                            android:text="存在问题 : "
                            />
                        <widget.MyListView
                            android:layout_toRightOf="@+id/text_commit_problem"
                            android:id="@+id/list_commit_illegal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            ></widget.MyListView>

                        <TextView
                            android:id="@+id/text_commit_noillegal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
