<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/rel_historyactivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        >

        <TextView
            android:id="@+id/text1_historyactivity"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:text="@string/ywlx"
            android:textSize="20sp"
            />
        <RadioGroup
            android:id="@+id/rg_historyactivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_toRightOf="@+id/text1_historyactivity"
            android:layout_alignTop="@+id/text1_historyactivity"
            android:layout_alignBottom="@+id/text1_historyactivity"
            >
            <CheckBox
                android:id="@+id/rb_historyactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/primebroker"
                />
            <CheckBox
                android:id="@+id/rb2_historyactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:text="@string/propertymanage"
                />
            <CheckBox
                android:id="@+id/rb3_historyactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:text="@string/generalbasement"
                />
            <CheckBox
                android:id="@+id/rb4_historyactivity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:text="@string/housesafeuse"
                />
            <CheckBox
                android:id="@+id/cb_history_other"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginLeft="20dp"
                android:text="@string/other"
                />
        </RadioGroup>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel3_historyactivity"
        android:layout_below="@+id/rel_historyactivity"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/text31_historyactivity"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/jcdx"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/ed3_historyactivity"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:background="@drawable/layout_shape"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/text31_historyactivity"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel_history_inspectno"
        android:layout_below="@+id/rel3_historyactivity"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/text_history_inspectno"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="本系统检查单号"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/edit_history_inspectno"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:background="@drawable/layout_shape"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/text_history_inspectno"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel_history_szt_bm"
        android:layout_below="@+id/rel_history_inspectno"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/text_history_szt_bm"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="市执法检查单编号"
            android:textSize="20sp"
            />
        <EditText
            android:id="@+id/edit_history_szt_bm"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:background="@drawable/layout_shape"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/text_history_szt_bm"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rel4_historyactivity"
        android:layout_below="@+id/rel_history_szt_bm"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/text_history_personshow"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/jcr"
            android:textSize="20sp"
            />
        <TextView
            android:id="@+id/text_history_person"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:background="@drawable/layout_shape"
            android:paddingLeft="10dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:layout_toRightOf="@+id/text_history_personshow"
            />
        <Button
            android:id="@+id/bt_history_clearperson"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/text_history_person"
            android:background="@drawable/button_color_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:text="清空检查人"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lin_history_date"
        android:layout_below="@+id/rel4_historyactivity"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_history_startdateshow"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="开始时间:"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/text_history_startdate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:background="@drawable/layout_shape"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_history_enddateshow"
                android:layout_width="110dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"
                android:text="结束时间:"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/text_history_enddate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:gravity="center_vertical"
                android:background="@drawable/layout_shape"
                />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/button_historyactivity"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="@string/sure"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:background="@drawable/button_color_selector"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/lin_history_date"
        android:layout_marginTop="50dp"/>
</RelativeLayout>