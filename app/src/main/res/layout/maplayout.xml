<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <com.esri.android.map.MapView
        android:id="@+id/mapview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
       />
    <LinearLayout
        android:layout_marginTop="50dip"
        android:layout_width="350dip"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dip"
            android:background="@mipmap/beijing"
            android:layout_marginTop="10dip">


            <LinearLayout
                android:layout_width="350dip"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                >
                <TextView
                    android:layout_width="290dip"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:hint="请输入地址或项目名"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:id="@+id/tvsearch_mapview"
                    />
                <EditText
                    android:layout_width="290dip"
                    android:layout_height="50dip"
                    android:visibility="gone"
                    android:hint="请输入地址或项目名"
                    android:background="@null"
                    android:textSize="20sp"
                    android:paddingLeft="10dp"
                    android:id="@+id/etsearch_mapview"
                    />

                <ImageButton
                    android:id="@+id/ivsearch_mapview"
                    android:layout_width="58dip"
                    android:layout_height="58dip"
                    android:background="@drawable/timesearch"
                    />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ListView
                android:id="@+id/searchlistview_mapview"
                android:visibility="gone"
                android:background="@color/snow"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="400dp">
            </ListView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
       >
        <LinearLayout
            android:layout_marginTop="150dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/basemap"
            android:id="@+id/basemap_mapview"
            android:layout_gravity="right|top"
            android:layout_marginRight="20dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/layers"
            android:id="@+id/layers_mapview"
            android:layout_gravity="right|top"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/track"
            android:id="@+id/track_mapview"
            android:layout_gravity="right|top"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            />
        <!--<ImageButton-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:src="@mipmap/around"-->
            <!--android:id="@+id/around_mapview"-->
            <!--android:layout_gravity="right|top"-->
            <!--android:layout_marginTop="20dp"-->
            <!--android:layout_marginRight="20dp"-->
            <!--/>-->
