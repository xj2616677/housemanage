<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <TextView
            android:id="@+id/text_newobject_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="普通地下室"
            android:textSize="20sp"
            android:padding="15dp"
            android:layout_centerInParent="true"
            />



        <TextView
            android:id="@+id/text_newobjectdialog_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="添加"
            android:textSize="20sp"
            android:padding="15dp"
            android:textColor="@color/titleback"
            android:background="@drawable/text_color_selector"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:id="@+id/bt_newobject_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:text="搜索"
            android:textSize="20sp"
            />


        <EditText
            android:id="@+id/edit_newobject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:textSize="20sp"
            android:background="@drawable/layout_shape"
            android:singleLine="true"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/bt_newobject_search"
            android:hint="请输入名称或地址"
            />


    </RelativeLayout>

    <ListView
        android:id="@+id/list_newobject_object"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        ></ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/text_newobjectdialog_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:background="@drawable/text_color_selector"
            android:gravity="center"
            android:text="@string/sure"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:background="@color/black"

            />
        <TextView
            android:id="@+id/text_newobjectdialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/text_color_selector"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/cancel"
            />

    </LinearLayout>

</LinearLayout>