                        android:layout_marginLeft="20dp"
                        android:id="@+id/bt_commit_mapchoose"
                        android:background="@drawable/button_color_selector"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
