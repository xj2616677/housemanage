                        android:textSize="20sp"

                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/lin_commit_feedphoto"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
