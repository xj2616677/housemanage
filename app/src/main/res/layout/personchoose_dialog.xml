<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_persondailog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_persondialog_title"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="人员列表"
            android:textSize="20sp"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/text_person_more"
            android:padding="10dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更多"
            android:background="@drawable/text_color_selector"
            android:textSize="20sp"
            />

    </RelativeLayout>
    <TextView
        android:id="@+id/text_persondialog_line"
        android:layout_below="@+id/rel_persondailog_title"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />



    <ExpandableListView
        android:layout_below="@+id/text_persondialog_line"
        android:id="@+id/expandlist_persondialog"
        android:layout_width="match_parent"
        android:layout_height="300dp"></ExpandableListView>
    <TextView
        android:layout_below="@+id/expandlist_persondialog"
        android:id="@+id/text_persondialog_line1"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />

    <LinearLayout
        android:id="@+id/lin_bottom"
        android:layout_below="@+id/text_persondialog_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/text_persondialog_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:background="@drawable/text_color_selector"
            android:gravity="center"
            android:text="@string/sure"
            />
        <TextView
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:background="@color/black"
            android:focusable="false"
            android:focusableInTouchMode="false"

            />

        <TextView
            android:id="@+id/text_persondialog_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:background="@drawable/text_color_selector"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/cancel"
            />

    </LinearLayout>

    <TextView
        android:layout_below="@+id/lin_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        />

</RelativeLayout>