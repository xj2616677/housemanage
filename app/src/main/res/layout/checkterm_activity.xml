<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/rel_checkterm_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        >

        <Button
            android:id="@+id/bt_checkterm_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/search"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            />

        <EditText
            android:id="@+id/edit_checkterm_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/bt_checkterm_search"
            android:layout_toLeftOf="@id/bt_checkterm_search"
            android:hint="@string/searchhint_checkterm"
            android:layout_alignBottom="@+id/bt_checkterm_search"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rel_checkterm_search">

        <LinearLayout
            android:id="@+id/lin_checkterm_content"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></LinearLayout>
    </ScrollView>



</RelativeLayout>