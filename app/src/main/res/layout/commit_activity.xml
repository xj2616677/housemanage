                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text="最多可以选择9张图片"
                        android:padding="10dp"
                        android:textSize="20sp"

                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_commit_video"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="视频资料:"
                        android:padding="10dp"
                        android:textSize="20sp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content" />

                    <widget.MyListView
                        android:id="@+id/list_commit_video"
                        android:layout_width="400dp"
                        android:scrollbars="none"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        ></widget.MyListView>

                    <Button
                        android:id="@+id/bt_commit_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="录制视频"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:background="@drawable/button_color_selector"
                        android:layout_gravity="center_vertical"
                        android:padding="5dp"
                        />

                    <TextView
                        android:id="@+id/text_commit_setvideosize"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:text="每个视频最多可以录制20秒"
                        android:padding="10dp"
                        android:textSize="20sp"

                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_commit_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
